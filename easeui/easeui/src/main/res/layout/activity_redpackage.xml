<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="51dp"
    android:background="#fff"
    android:orientation="horizontal"
    >
    <TextView
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:textSize="15sp"
        android:textColor="#3C3C3C"
        android:id="@+id/back"
        android:text="取消"
        />
    <TextView
        android:layout_centerInParent="true"
        android:layout_gravity="center_vertical"
        android:textColor="#181A1D"
        android:layout_width="wrap_content"
        android:textSize="17sp"
        android:layout_height="wrap_content"
        android:text="发红包"
        />
    <ImageView
        android:scaleType="centerInside"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:id="@+id/question"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        android:src="@drawable/icon_money_question"
        />
</RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E5E5E5"
        />
    <LinearLayout
        android:layout_marginTop="26dp"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:orientation="horizontal"
        android:background="@drawable/ease_red_package_shape"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#3C3C3C"
            android:layout_marginLeft="15dp"

            android:textSize="18sp"
            android:layout_gravity="center_vertical"
            android:text="金额"
            android:textStyle="bold"
            />
        <EditText
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textColorHint="#868686"
            android:textColor="#3C3C3C"
            android:textSize="16sp"
            android:gravity="right|center_vertical"
            android:background="@null"
            android:id="@+id/inputMoney"

            android:hint="0.00"
            android:inputType="numberDecimal"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#3C3C3C"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            android:text="元"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="19dp"
        android:layout_width="match_parent"
        android:layout_height="71dp"
        android:orientation="horizontal"
        android:background="@drawable/ease_red_package_shape"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        >

        <EditText
            android:id="@+id/desc"

            android:layout_width="match_parent"
            android:layout_height="71dp"
            android:paddingTop="13dp"
            android:paddingLeft="10dp"
            android:gravity="left|top"
            android:textSize="15sp"
            android:textColorHint="#9A9A9A"
            android:background="@null"
            android:hint="恭喜发财"
            android:layout_gravity="center_vertical"
            />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="33dp"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:textSize="45sp"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#000"

                android:text="¥ " />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:textSize="45sp"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#000"
                android:id="@+id/moneyNUm"
                android:text="0.00"
                />

        </LinearLayout>

    </RelativeLayout>


    <TextView
        android:layout_marginRight="46dp"
        android:layout_marginLeft="45dp"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:id="@+id/send_red"
        android:layout_marginTop="30dp"
        android:text="塞进红包"
        android:gravity="center"
        android:textColor="#fff"
        android:background="@drawable/ease_red_package_btn_shape"
        />
</LinearLayout>
