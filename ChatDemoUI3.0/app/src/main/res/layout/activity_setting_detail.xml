<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:quchattext="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F6F5"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:background="#fff"
        android:orientation="horizontal"
        android:layout_height="50dp">
        <ImageView
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/img_back"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ease_mm_title_back"
            />
        <TextView
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="#000"

            android:textSize="18sp"
            android:id="@+id/fragent_title"
            android:text="设置"
            />

    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#e5e5e5"
        />
    <com.quchat.widget.CustomTextRow
        quchattext:text_left_text="账户设置"
        android:layout_width="match_parent"
        android:id="@+id/account_layout"
        android:layout_height="50dp">

    </com.quchat.widget.CustomTextRow>


    <com.quchat.widget.CustomTextRow
        quchattext:text_left_text="通知设置"
        android:id="@+id/notice_layout"
        android:layout_width="match_parent"
        quchattext:boolean_line="false"
        android:layout_height="50dp">

    </com.quchat.widget.CustomTextRow>


    <com.quchat.widget.CustomTextRow
        android:id="@+id/use_layout"
        quchattext:text_left_text="通用"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        quchattext:boolean_line="false"
        android:layout_height="50dp">

    </com.quchat.widget.CustomTextRow>

    <com.quchat.widget.CustomTextRow
        android:layout_marginTop="5dp"
        android:id="@+id/help_layout"
        quchattext:text_left_text="帮助与建议"
        android:layout_width="match_parent"
        android:layout_height="50dp">

    </com.quchat.widget.CustomTextRow>

    <com.quchat.widget.CustomTextRow
        android:id="@+id/question_layout"
        quchattext:text_left_text="问题反馈"
        android:layout_width="match_parent"
        android:layout_height="50dp">

    </com.quchat.widget.CustomTextRow>


    <com.quchat.widget.CustomTextRow
        android:id="@+id/about_layout"
        quchattext:text_left_text="关于趣信"
        android:layout_width="match_parent"
        android:layout_height="50dp">

    </com.quchat.widget.CustomTextRow>


    <com.quchat.widget.CustomTextRow
        android:id="@+id/layout_logout"
        quchattext:text_left_text="退出"
        android:layout_width="match_parent"
        quchattext:boolean_line="false"
        android:layout_height="50dp">

    </com.quchat.widget.CustomTextRow>

</LinearLayout>
