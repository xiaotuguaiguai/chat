<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal"
        >
        <com.quchat.widget.CircleImageView
            android:scaleType="centerCrop"
            android:id="@+id/item_face"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/logo"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:textColor="#000000"
                android:id="@+id/item_name"
                android:textSize="16sp"
                android:layout_height="wrap_content"
                android:text="11"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:layout_centerVertical="true"
                    android:id="@+id/time_text"
                    android:text="333"
                    android:textColor="#838383"
                    />
                <TextView
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/delete_text"
                    android:textColor="#19B390"
                    android:textSize="13sp"
                    android:text="删除"
                    android:visibility="gone"

                    android:layout_marginLeft="10dp"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/item_content"
                android:layout_width="407dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="内容"
                android:textColor="#242424"
                android:textSize="14sp" />
            <android.support.v7.widget.RecyclerView
                android:layout_marginTop="10dp"
                android:id="@+id/item_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginRight="10dp"

                >


                <TextView
                    android:layout_centerVertical="true"
                    android:text="0人赞."
                    android:id="@+id/zan_num"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:textColor="#777777"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_centerVertical="true"
                    android:id="@+id/review_num"
                    android:text="5条评论"
                    android:layout_toRightOf="@+id/zan_num"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:textColor="#777777"
                    android:layout_height="wrap_content" />

                    <ImageView
                       android:layout_centerVertical="true"
                        android:layout_width="32dp"
                        android:layout_marginTop="-5dp"
                        android:layout_height="33dp"
                        android:scaleType="centerInside"
                        android:layout_toLeftOf="@+id/img_comment"
                        android:src="@drawable/icon_zan"
                        android:id="@+id/img_zan"
                        />
                    <ImageView
                       android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="16dp"
                        android:scaleType="centerInside"
                        android:layout_marginLeft="20dp"
                        android:layout_width="33dp"
                        android:layout_height="31dp"
                        android:src="@drawable/icon_pinglun"
                        android:id="@+id/img_comment"
                        />



            </RelativeLayout>
            <android.support.v7.widget.RecyclerView
                android:layout_marginTop="5dp"
                android:id="@+id/item_comment"
                android:layout_width="match_parent"
                android:layout_marginRight="10dp"
                android:background="#F7F7F7"
                android:layout_marginBottom="20dp"
                android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#e5e5e5"
            android:layout_marginLeft="67dp"
            />
    </LinearLayout>

</LinearLayout>
