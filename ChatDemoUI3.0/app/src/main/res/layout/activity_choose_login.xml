<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/splash_root"
    android:background="@drawable/choose_login_bg"
    >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="137dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/choose_login_logo"
        />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_centerHorizontal="true"
    android:layout_above="@+id/login_agree"
    android:layout_marginBottom="38dp"
    >

    <TextView
        android:textColor="#fff"
        android:text="微信登录"
        android:gravity="center"
        android:id="@+id/wx_btn"
        android:background="@drawable/choose_login_wx_btn"
        android:layout_width="271dp"
        android:layout_height="42dp" />
    <TextView
        android:textColor="#fff"
        android:text="手机登录"
        android:id="@+id/phone_btn"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:background="@drawable/choose_login_phone_btn"
        android:layout_width="271dp"
        android:layout_height="42dp" />
</LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="46dp"
        android:id="@+id/login_agree"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:text="登录即视为同意"
            />
        <TextView
            android:textColor="#3DD5D8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《趣信用户协议》"
            />
    </LinearLayout>

</RelativeLayout>
