<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:quchattext="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F6F5"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:background="#fff"
        android:orientation="horizontal"
        android:layout_height="50dp">
        <ImageView
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/img_back"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ease_mm_title_back"
            />
        <TextView
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="#000"
            android:textSize="18sp"
            android:id="@+id/fragent_title"
            android:text="关于趣信"
            />

    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e5e5e5"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        android:layout_marginTop="46dp"
        android:layout_gravity="center_horizontal"

        />
    <TextView
        android:layout_marginTop="16dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#818181"
        android:textSize="15sp"
        android:id="@+id/version"
        />
    <com.quchat.widget.CustomTextRow
        android:layout_marginTop="38dp"
        android:id="@+id/pingfen_layout"
        quchattext:text_left_text="评分"
        quchattext:boolean_line="false"
        android:layout_width="match_parent"
        android:layout_height="55dp">

    </com.quchat.widget.CustomTextRow>


    <com.quchat.widget.CustomTextRow
        android:id="@+id/zhengce_layout"
        quchattext:text_left_text="隐私政策"
        android:layout_width="match_parent"
        quchattext:boolean_line="false"
        android:layout_height="55dp">

    </com.quchat.widget.CustomTextRow>

    <com.quchat.widget.CustomTextRow
        quchattext:text_left_text="用户协议"
        android:layout_width="match_parent"
        quchattext:boolean_line="false"
        android:id="@+id/xieyi_layout"
        android:layout_height="55dp">

    </com.quchat.widget.CustomTextRow>


</LinearLayout>
