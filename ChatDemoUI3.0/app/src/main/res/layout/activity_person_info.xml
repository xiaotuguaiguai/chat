<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:circleimageview="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#F5F5F5">
    <RelativeLayout
        android:layout_marginTop="-5dp"
        android:layout_width="match_parent"
        android:layout_height="218dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/bg_image"
            android:src="@drawable/bg_cover"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="218dp"
            android:orientation="vertical"
            android:id="@+id/bg_layout"

            >
            <RelativeLayout
                android:layout_width="match_parent"

                android:orientation="horizontal"
                android:layout_height="50dp">
                <ImageView
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/img_back"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_back_white"
                    />
                <TextView
                    android:layout_toRightOf="@+id/img_back"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:textColor="#fff"
                    android:textSize="17sp"
                    android:id="@+id/fragent_title"
                    android:text="详细资料"
                    />
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="14dp"
                    android:id="@+id/more"
                    android:src="@drawable/icon_person_more"
                    />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="45dp"
                >

                <com.quchat.widget.CircleImageView
                    android:layout_width="69dp"
                    android:layout_height="69dp"
                    android:src="@drawable/logo"
                    android:id="@+id/face"
                    circleimageview:civ_border_color="#fff"
                    circleimageview:civ_border_width="2dp"
                    android:layout_gravity="center_vertical"
                    />

                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="name"
                        android:id="@+id/name_text"
                        android:textColor="#fff"
                        android:textStyle="bold"

                        />
                    <TextView
                        android:layout_marginTop="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/id_text"
                        android:textColor="#B8B8B8"
                        android:textSize="15sp"
                        android:text="id"
                        />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:background="#fff"
        android:id="@+id/desc_layout"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:text="设置备注和描述"
            android:textColor="#3C3C3C"
            android:textSize="15sp"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:orientation="horizontal"
        android:layout_marginTop="13dp"
        android:background="#fff"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center_vertical"
            android:text="个人相册"
            android:textColor="#3C3C3C"
            android:textSize="15sp" />
        <ImageView
            android:layout_marginLeft="37dp"
            android:layout_gravity="center_vertical"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:id="@+id/image1"
            android:visibility="gone"
            android:src="@drawable/logo"
            />
        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_width="44dp"
            android:layout_marginLeft="7dp"
            android:layout_height="44dp"
            android:id="@+id/image2"
            android:visibility="gone"
            android:src="@drawable/logo"
            />
        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginLeft="7dp"
            android:id="@+id/image3"
            android:src="@drawable/logo"
            android:visibility="gone"
            />
        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginLeft="7dp"
            android:id="@+id/image4"
            android:src="@drawable/logo"
            android:visibility="gone"
            />
        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:id="@+id/image5"
            android:layout_marginLeft="7dp"
            android:src="@drawable/logo"
            android:visibility="gone"
            />
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="15dp"
        android:background="#e5e5e5"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:orientation="horizontal"
        android:background="#fff"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#3C3C3C"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:textSize="15sp"
            android:text="地"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="占"
            android:textColor="#fff"
            android:textSize="15sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="占"
            android:textColor="#fff"
            android:textSize="15sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#3C3C3C"
            android:layout_gravity="center_vertical"

            android:textSize="15sp"
            android:text="区"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#828282"
            android:id="@+id/address_text"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="37dp"
            android:textSize="13sp"
            android:text="地区"
            />
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="15dp"
        android:background="#e5e5e5"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:orientation="horizontal"
        android:background="#fff"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#3C3C3C"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:textSize="15sp"
            android:text="个性签名"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#828282"
            android:id="@+id/sign_text"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="37dp"
            android:textSize="13sp"
            android:text="签名"
            />
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="15dp"
        android:background="#e5e5e5"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:orientation="horizontal"
        android:background="#fff"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#3C3C3C"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:textSize="15sp"
            android:text="来源"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="占"
            android:textColor="#fff"
            android:textSize="15sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="占"
            android:textColor="#fff"
            android:textSize="15sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#828282"
            android:id="@+id/source_text"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="37dp"
            android:textSize="13sp"
            android:text="来源未知"
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="25dp"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textColor="#fff"
                android:textSize="15sp"
                android:layout_marginLeft="26dp"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/msg_btn"
                android:background="#2FACF0"
                android:layout_marginRight="9dp"
                android:text="发消息"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textColor="#fff"
                android:textSize="15sp"
                android:layout_marginLeft="9dp"
                android:background="#19B390"
                android:layout_weight="1"
                android:layout_marginRight="22dp"
                android:id="@+id/video_btn"
                android:gravity="center"
                android:text="视频通话"
                />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
